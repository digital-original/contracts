{
    "name": "contracts",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "scripts": {
        "test": "npm run compile && ENV_MODE=test hardhat test",
        "compile": "hardhat clean && hardhat compile",
        "fork": "hardhat run node",
        "lint": "solhint 'contracts/**'",
        "format": "prettier --write .",
        "prepare": "husky install && test -f config.json || echo '{}' > config.json",
        "est": "docker run -it --rm -v $PWD:/src trailofbits/eth-security-toolbox",
        "slither": "ENV_MODE=test slither ./ --config-file ./slither.config.json"
    },
    "dependencies": {
        "@nomicfoundation/hardhat-toolbox": "^4.0.0",
        "@openzeppelin/contracts": "^5.0.1",
        "@openzeppelin/contracts-upgradeable": "^5.0.1",
        "dotenv": "^16.3.1",
        "hardhat": "^2.19.3",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "prettier-plugin-solidity": "^1.3.1",
        "solhint": "^4.0.0"
    }
}
