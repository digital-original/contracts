{
    "name": "contracts",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "scripts": {
        "test": "ENV_MODE=test hardhat test",
        "compile": "hardhat clean && hardhat compile",
        "fork": "hardhat node",
        "lint": "solhint 'contracts/**'",
        "format": "prettier --write .",
        "prepare": "husky install && test -f config.env.yaml || cp config.env.example.yaml config.env.yaml",
        "est": "docker run -it --rm -v $PWD:/src trailofbits/eth-security-toolbox",
        "slither": "ENV_MODE=test slither ./ --config-file ./slither.config.json"
    },
    "dependencies": {
        "@nomicfoundation/hardhat-toolbox": "^6.0.0",
        "@openzeppelin/contracts": "^5.0.2",
        "@openzeppelin/contracts-upgradeable": "^5.0.2",
        "@types/js-yaml": "^4.0.9",
        "dotenv": "^16.5.0",
        "ethers": "^6.14.4",
        "hardhat": "^2.25.0",
        "husky": "^9.1.7",
        "js-yaml": "^4.1.0",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.0",
        "prettier-plugin-solidity": "^2.0.0",
        "solhint": "^5.1.0"
    }
}
