{
    "name": "contracts",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "scripts": {
        "test": "ENV_MODE=test hardhat test",
        "lint": "solhint 'src/contracts/**'",
        "format": "prettier --write .",
        "prepare": "husky install",
        "est": "docker run -it --rm -v $PWD:/src trailofbits/eth-security-toolbox",
        "deploy:classic": "hardhat run src/deploy/classic.ts",
        "deploy:upgradable": "hardhat run src/deploy/upgradable.ts",
        "deploy:upgrade": "hardhat run src/deploy/upgrade.ts",
        "deploy:verify": "hardhat run src/deploy/verify.ts",
        "slither": "ENV_MODE=test slither ./ --config-file ./slither.config.json"
    },
    "dependencies": {
        "@nomicfoundation/hardhat-toolbox": "^3.0.0",
        "@openzeppelin/contracts": "^5.0.0",
        "@openzeppelin/contracts-upgradeable": "^5.0.0",
        "dotenv": "^16.3.1",
        "hardhat": "^2.18.3",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2",
        "prettier": "^3.0.3",
        "prettier-plugin-solidity": "^1.1.3",
        "solhint": "^3.6.2"
    }
}
