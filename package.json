{
    "name": "contracts",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "scripts": {
        "test": "ENV_MODE=test hardhat test",
        "compile": "hardhat clean && hardhat compile",
        "fork": "hardhat node",
        "lint": "solhint 'contracts/**'",
        "format": "prettier --write .",
        "prepare": "husky && . ./init.sh",
        "est": "docker run -it --rm -v $PWD:/src trailofbits/eth-security-toolbox",
        "slither": "ENV_MODE=test slither ./ --config-file ./slither.config.json"
    },
    "dependencies": {
        "@nomicfoundation/hardhat-toolbox": "^6.1.0",
        "@openzeppelin/contracts": "^5.0.2",
        "@openzeppelin/contracts-upgradeable": "^5.0.2",
        "@types/js-yaml": "^4.0.9",
        "ethers": "^6.16.0",
        "hardhat": "^2.28.0",
        "husky": "^9.1.7",
        "js-yaml": "^4.1.1",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "prettier-plugin-solidity": "^2.2.1",
        "solhint": "^6.0.2"
    }
}
