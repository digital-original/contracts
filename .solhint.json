{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.0"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "reason-string": [
            "warn",
            {
                "maxLength": 48
            }
        ],
        "no-empty-blocks": "off",
        "func-name-mixedcase": "off",
        "use-natspec": "off",
        "gas-small-strings": "off",
        "gas-indexed-events": "off",
        "function-max-lines": "off",
        "gas-strict-inequalities": "off",
        "no-inline-assembly": "off"
    }
}
