{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.0"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "reason-string": [
            "warn",
            {
                "maxLength": 48
            }
        ],
        "no-empty-blocks": "off",
        "func-name-mixedcase": "off"
    }
}
